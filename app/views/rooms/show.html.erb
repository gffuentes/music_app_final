<div class="room">
	<h1><%= @room.name %> by <%= @room.user.email %><br>
	<small><%= @room.description %></small></h1>
	<br>
	<div class ="row">
		<div class="col-md-6">			
			<% @room.songs.each do |f| %>
					<h3><%= f.title + ' by ' unless f.title.nil? %><%=f.username unless f.username.nil?%></h3>
				<%=render 'soundcloud', :surl => f.URL %>
			<% end %>
			<%= form_for @song do |f| %>
					<fieldset>
						<div>
							<%= f.label :URL, "Soundcloud link:" %>
							<%= f.text_field :URL %>
							<%= f.hidden_field :room_id, value: @room.id %>
							<%= f.hidden_field :user_id, value: current_user.id %>
							<%= f.submit "Submit" %>
						</div>
					</fieldset>
				<% end %>
		</div>
		<div class="col-md-6">
			<div class="chat-box">
				<% @room.comments.each do |f| %>
					<b><%= f.user.email %></b>: <%= f.comment %>
					<br><br>
				<% end %>
			</div>
				<%= form_for @comment do |f| %>
					<fieldset>
						<div>
							<%= f.label :comment %>
							<%= f.text_field :comment %>
							<%= f.hidden_field :room_id, value: @room.id %>
							<%= f.hidden_field :user_id, value: current_user.id %>
							<%= f.submit "Submit" %>
						</div>
					</fieldset>
				<% end %>
		</div>
	</div>
</div>